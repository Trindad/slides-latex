\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamercolorthemeAAUsidebar}[2014/05/26 v1.1.0 The AAU Sidebar Beamer Theme]

\DeclareOptionBeamer{lightheaderbg}{\def\beamer@lightheaderbg{true}}
\ProcessOptionsBeamer

\mode<presentation>
{
  \definecolor{beamer@barcolor}{RGB}{83, 140, 79}
  \definecolor{beamer@headercolor}{RGB}{17, 96, 21}
  \definecolor{beamer@normaltextcolor}{RGB}{87, 137, 83}

  \setbeamercolor{structure}{fg=beamer@headercolor}
  \setbeamercolor{normal text}{fg=beamer@normaltextcolor}
  \ifx\beamer@lightheaderbg\undefined
    \setbeamercolor{frametitle}{fg=white,bg=beamer@headercolor}
  \fi
  \setbeamercolor{AAUsidebar}{fg=beamer@barcolor,bg=beamer@headercolor}
}

\mode<all>
